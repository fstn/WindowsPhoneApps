<UserControl x:Class="MyToolkit.Controls.VideoButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
             xmlns:Controls="clr-namespace:MyToolkit.Controls" mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

	<Controls:UnstyledButton x:Name="Button" toolkit:TiltEffect.IsTiltEnabled="True" Margin="0">
		<Grid Background="{StaticResource PhoneInactiveBrush}">
			<Image Stretch="UniformToFill" x:Name="Image" Opacity="0.65" />
			<Image Width="96" Height="96" x:Name="PlayImage" VerticalAlignment="Center" HorizontalAlignment="Center" />
		</Grid>
	</Controls:UnstyledButton>
</UserControl>
