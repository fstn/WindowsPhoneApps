<phone:PhoneApplicationPage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls" 
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:myNameSpace="clr-namespace:Weekend"
    xmlns:local="clr-namespace:Weekend.Controls" 
    xmlns:anim="clr-namespace:AnimationFramework"
    xmlns:cc="clr-namespace:Coding4Fun.Phone.Controls;assembly=Coding4Fun.Phone.Controls"
    x:Class="Weekend.MainPage" 
    xmlns:userControl="clr-namespace:FstnUserControl;assembly=FstnUserControl"
    xmlns:tile="clr-namespace:FstnUserControl.Tile;assembly=FstnUserControl"
    mc:Ignorable="d" d:DesignWidth="460" d:DesignHeight="768"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True" Loaded="PhoneApplicationPage_Loaded_1">

    <phone:PhoneApplicationPage.DataContext>
        <Binding Path="MainViewModel" Source="{StaticResource Locator}"/>
    </phone:PhoneApplicationPage.DataContext>
    <phone:PhoneApplicationPage.Resources>
    
    </phone:PhoneApplicationPage.Resources>
    <phone:PhoneApplicationPage.FontFamily>
        <StaticResource ResourceKey="PhoneFontFamilyNormal"/>
    </phone:PhoneApplicationPage.FontFamily>
    <phone:PhoneApplicationPage.FontSize>
        <StaticResource ResourceKey="PhoneFontSizeNormal"/>
    </phone:PhoneApplicationPage.FontSize>
    <phone:PhoneApplicationPage.Foreground>
        <StaticResource ResourceKey="PhoneForegroundBrush"/>
    </phone:PhoneApplicationPage.Foreground>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="146*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="ContentPanel" Margin="10,20,10,0" Grid.RowSpan="3">
            <controls:Pivot HorizontalAlignment="Left" Height="797" VerticalAlignment="Top" Width="480" Margin="-10,-56,0,-65" 
                            SelectedIndex="{Binding SelectedPivot,Mode=TwoWay}" SelectionChanged="Pivot_SelectionChanged_1"
                            x:Name="Pivot" 
                            >
                <!-- Response Item-->
                <controls:PivotItem Header="{Binding ResourceGetter.Response, Source={StaticResource LocalizedStrings}}">
                    <StackPanel Width="457" >
                        <userControl:CoinFlipCounter x:Name="coinFlip" RenderTransformOrigin="0.5,0.5" Canvas.Left="71" Canvas.Top="38" Height="331" Width="331" Margin="0,50,0,90"  >
                        </userControl:CoinFlipCounter>
                        <cc:ChatBubble ChatBubbleDirection="LowerRight" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="resultText" 
                        			Text="{Binding ResourceGetter.Enjoy, Source={StaticResource LocalizedStrings}}" 
                        			Style="{StaticResource PhoneTextLargeStyle}"
                        			Visibility="Visible" TextWrapping="Wrap" Width="400"/>
                            </Grid>
                        </cc:ChatBubble>
                    </StackPanel>
                </controls:PivotItem>
                
                <!-- Settings Item-->
                <controls:PivotItem x:Name="SettingsPI" Header="{Binding ResourceGetter.Settings, Source={StaticResource LocalizedStrings}}" Margin="10,-106,-432,-7" RenderTransformOrigin="0.806,0.861">

                    <StackPanel Height="750">
                        <StackPanel Height="110"></StackPanel>
                        <StackPanel Height="678" Margin="15,15,15,15">
                            
                            <!---EndOfWeekDay-->
                            <StackPanel Orientation="Horizontal">
                                
                                <tile:TileSimpleVoidElement x:Name="daysOfweekT"  View="MainPage"
                                                            Margin="5,5,5,5" 
                                                            Width="200" Height="200" 
                                                            Background="{Binding LightAccent, Source={StaticResource ColorManager}}" Tap="daysOfweekT_Tap" >
                                    <tile:TileSimpleVoidElement.Element>
                                        <Image Source="/images/day.png"></Image>
                                    </tile:TileSimpleVoidElement.Element>
                                </tile:TileSimpleVoidElement>
                                <tile:TileMultiVoidElement x:Name="daysOfweekCT"  View="MainPage"
                                                           LabelText="{Binding ResourceGetter.DayOfWeekend, Source={StaticResource LocalizedStrings}}"
                                                           Margin="5,5,5,5" Width="200" 
                                                           Foreground="White"
                                                           Background="{StaticResource PhoneAccentBrush}" Tap="daysOfweekT_Tap"
                                                           >
                                    <tile:TileMultiVoidElement.Element>
                                        <toolkit:ListPicker  x:Name="daysOfweek" 
                                                             FullModeItemTemplate="{StaticResource ListPickerFullModeItemTemplate}"
                                                             Style="{StaticResource ListPickerSimpleStyle}"
                                                             ItemsSource="{Binding MainViewModel.ListDay, Source={StaticResource Locator}}" Margin="10,10,10,10"
                                                             SelectedItem="{Binding MainViewModel.EndOfWeekDay, Mode=TwoWay, Source={StaticResource Locator}}"  >
                                            <toolkit:ListPicker.ItemTemplate>
                                                <DataTemplate >
                                                    <TextBlock Text="{Binding}" Foreground="White" Style="{StaticResource PhoneTextLargeStyle}"  Margin="0,0,0,0"/>
                                                </DataTemplate>
                                            </toolkit:ListPicker.ItemTemplate>
                                        </toolkit:ListPicker>
                                    </tile:TileMultiVoidElement.Element>
                                </tile:TileMultiVoidElement>
                            </StackPanel>
                            <!-- End of week time-->
                            <StackPanel Orientation="Horizontal">

                                <tile:TileMultiVoidElement x:Name="endOfWeekCT"  View="MainPage"
                                                           Foreground="White"
                                                           LabelText="{Binding ResourceGetter.EndOfWeekeTime, Source={StaticResource LocalizedStrings}}"
                                                           Margin="5,5,5,5" Width="200" Background="{StaticResource PhoneAccentBrush}" Tap="endOfWeekT_Tap">
                                    <tile:TileMultiVoidElement.Element>
                                        <toolkit:TimePicker x:Name="endOfWeek"  Foreground="White" 
                                                            FontSize="{StaticResource PhoneFontSizeExtraLarge}"
                                                            Background="Transparent"
                                                            Margin="5,5,5,5"
                                                            Value="{Binding MainViewModel.EndOfWeekTime, 
                                                            Source={StaticResource Locator}
                                                            ,Mode=TwoWay}"
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                    </tile:TileMultiVoidElement.Element>
                                </tile:TileMultiVoidElement>
                                <tile:TileSimpleVoidElement x:Name="endOfWeekT"  View="MainPage"
                                                            Margin="5,5,5,5" Width="200" Height="200"
                                                            Background="{Binding LightAccent, Source={StaticResource ColorManager}}" Tap="endOfWeekT_Tap" >
                                    <tile:TileSimpleVoidElement.Element>
                                        <Image Source="/images/time.png"></Image>
                                    </tile:TileSimpleVoidElement.Element>
                                </tile:TileSimpleVoidElement>
                            </StackPanel>
                            <!-- Duration-->
                            <StackPanel Orientation="Horizontal">
                                <tile:TileSimpleVoidElement x:Name="weekendDurationT"  View="MainPage"
                                                            Margin="5,5,5,5" Width="200"
                                                            Background="{Binding LightAccent, Source={StaticResource ColorManager}}" Tap="weekendDurationT_Tap" >
                                    <tile:TileSimpleVoidElement.Element>
                                        <Image Source="/images/duration.png"></Image>
                                    </tile:TileSimpleVoidElement.Element>
                                </tile:TileSimpleVoidElement>
                                <tile:TileMultiVoidElement x:Name="weekendDurationCT"  View="MainPage"
                                                           Foreground="White"
                                                           LabelText="{Binding ResourceGetter.WeekendDuration, Source={StaticResource LocalizedStrings}}"
                                                           Margin="5,5,5,5"  Width="200" Background="{StaticResource PhoneAccentBrush}" Tap="weekendDurationT_Tap">
                                    <tile:TileMultiVoidElement.Element>
                                        <toolkit:ListPicker  x:Name="weekendDuration"
                                                             FullModeItemTemplate="{StaticResource ListPickerFullModeItemTemplate}"
                                                             Style="{StaticResource ListPickerSimpleStyle}"
                                                             ItemsSource="{Binding MainViewModel.ListDayNumber, Source={StaticResource Locator}}" Margin="10,10,10,10"
                                                             SelectedItem="{Binding MainViewModel.WeekendDuration, Mode=TwoWay, Source={StaticResource Locator}}"  >
                                            <toolkit:ListPicker.ItemTemplate >
                                                <DataTemplate >
                                                    <TextBlock Text="{Binding}" TextAlignment="Center" Foreground="White" Style="{StaticResource PhoneTextLargeStyle}" />
                                                </DataTemplate>                                              
                                            </toolkit:ListPicker.ItemTemplate>
                                        </toolkit:ListPicker>
                                    </tile:TileMultiVoidElement.Element>
                                </tile:TileMultiVoidElement>
                               
                            </StackPanel>
                         
                        </StackPanel>
                    </StackPanel>
                </controls:PivotItem>
            </controls:Pivot>
        </Grid>
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28"/>
    </Grid>

</phone:PhoneApplicationPage>