@using MvcApplication2.Models.Generated
@model List<Author>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-hover">
    <tr>
        <th></th>
        <th>
            Id
        </th>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Email
        </th>
        <th>
            Articles
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="minSizeTD">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Id
        </td>
        <td>
			@item.FirstName
        </td>
        <td>
			@item.LastName
        </td>
        <td>
			@item.Email
        </td>
        <td>
			@(item.Articles == null ? "None" : item.Articles.Count.ToString())
        </td>
    </tr>
}

</table>
<p style="text-align:right;margin-top:50px">

    @Html.ActionLink("Create New", "Create","Authors",new {@class="btn btn-success"})
</p>


