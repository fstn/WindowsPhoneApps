@using MvcApplication2.Models.Generated
@model Author   

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Author</legend>

    <div class="display-label">FirstName</div>
    <div class="display-field">@Model.FirstName</div>

    <div class="display-label">LastName</div>
    <div class="display-field">@Model.LastName</div>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">Articles</div>
    <div class="display-field">@(Model.Articles == null ? "None" : Model.Articles.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
     @Html.ActionLink("Back to List", "Index","Authors",
                null,new {@class="btn btn-inverse"})
    </p>
}


