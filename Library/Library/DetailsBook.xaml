<phone:PhoneApplicationPage
    x:Class="Library.DetailsBook"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:tookit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">

    <phone:PhoneApplicationPage.DataContext>
        <Binding Path="DetailsBookViewModel" Source="{StaticResource Locator}"/>
    </phone:PhoneApplicationPage.DataContext>
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="{Binding ResourceGetter.Title,Source={StaticResource LocalizedStrings}}" Style="{StaticResource PhoneTextNormalStyle}"/>

            <TextBlock Text="{Binding Title,Mode=TwoWay}" 
                       Margin="9,-7,33,0" 
                       Style="{StaticResource PhoneTextTitle1Style}" 
                       FontSize="48" Foreground="White" Height="92"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="10,10,14,-10">

            <TextBlock x:Name="ISBN" 
                      Text="{Binding ISBN,Mode=TwoWay}" 
                      Margin="43,65,24,417" 
                        Foreground="White"
                      Style="{StaticResource PhoneTextTitle1Style}"/>
            <TextBlock x:Name="Author" 
                     Text="{Binding Author,Mode=TwoWay}"
                     HorizontalAlignment="Left" 
                     Height="72" Margin="43,285,0,0" 
                     TextWrapping="Wrap" 
                       Foreground="White"
                     VerticalAlignment="Top" 
                     Width="389" 
                     Style="{StaticResource PhoneTextTitle3Style}"/>

        </Grid>
    </Grid>
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBarIconButton Click="Home_Click" IconUri="/img/appbar.home.png" Text="Home"/>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>


</phone:PhoneApplicationPage>