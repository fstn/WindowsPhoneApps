<phone:PhoneApplicationPage 
    x:Class="MarketRoulet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:fstn="clr-namespace:FstnUserControl;assembly=FstnUserControl"
    xmlns:advertising ="clr-namespace:Microsoft.Advertising.Mobile.UI;assembly=Microsoft.Advertising.Mobile.UI"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait">

    <phone:PhoneApplicationPage.DataContext>
        <Binding Path="MainViewModel" Source="{StaticResource Locator}"/>
    </phone:PhoneApplicationPage.DataContext>
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Border Background="Transparent">
            <advertising:AdControl Name="AdControl" Height="80"  Width="480"  BorderThickness="0" 
                Background="Transparent"                                  
        		AdUnitId="117661" ApplicationId="02c2cb4f-982f-43cf-963b-777d1f7ceabf" />
            </Border>
        </StackPanel>
        <controls:Pivot Name="ContentLayout"                         
                        Grid.Row="2" Padding="0" Margin="0,-10,0,0" 
                        Canvas.Top="0"
                        Width="480" Height="610">
        </controls:Pivot>
        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="1" Background="{StaticResource PhoneAccentBrush}" >
            <TextBlock x:Name="MarketCatTitle" 
                       
                       Style="{StaticResource PhoneTextTitle2Style}" 
                       Text="{Binding ResourceGetter.Title, Source={StaticResource LocalizedStrings}}" />
        </StackPanel>
    </Grid>
    
</phone:PhoneApplicationPage>